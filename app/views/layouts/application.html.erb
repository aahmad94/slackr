<!DOCTYPE html>
<html>
  <head>
    <title>Wookiee</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          'id': <%= current_user.id %>,
          'email': '<%= current_user.email %>',
          'displayname': '<%= current_user.displayname %>'
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
